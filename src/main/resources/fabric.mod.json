    "icon": "assets/entity-distance/icon.png",

    "environment": "client",
    "entrypoints": {
        "modmenu": [
            "com.capnkork.entitydistance.config.ModMenuIntegration"
        ]
    },
    "mixins": [
        "entity-distance.mixins.json"
    ],

    "depends": {
